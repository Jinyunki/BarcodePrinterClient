<Window x:Class="Leak_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Leak_UI"
        mc:Ignorable="d" Background="Transparent"
        WindowStyle="None" MouseDown="Window_MouseDown"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        Height="500" Width="500">
    <Window.Resources>
        <!--Window btn style-->
        <Style TargetType="Button" x:Key="CommonButtonStyle">
            <Setter Property="FontFamily" Value="Montserret"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Width="20" Height="20" CornerRadius="9" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource Self}, Path=Background}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <!--basic window-->
    <Border CornerRadius="12">
        <Border CornerRadius="15"
               BorderThickness="5"
               Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="DarkBlue" Offset="0"/>
                    <GradientStop Color="PeachPuff" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFFFD5FF" Offset="0"/>
                    <GradientStop Color="#FF9A9AFF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!--Top WindowBtn-->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnMinimize" Grid.Column="1" Content="-" FontSize="16" Background="#FF112C58"
                    Style="{StaticResource CommonButtonStyle}" Click="btnMinimize_Click"/>

                    <Button x:Name="btnSize" Grid.Column="2" Content="O" FontSize="12" Background="DarkBlue"
                    Style="{StaticResource CommonButtonStyle}" Click="btnSize_Click"/>

                    <Button x:Name="btnClose" Grid.Column="3" Content="X" FontSize="12" Background="#FFC92AD2"
                    Style="{StaticResource CommonButtonStyle}" Click="btnClose_Click"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="5*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="모델 품번 : " FontSize="20" 
                                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Row="1" Text="포장 수량 : " FontSize="20" 
                                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Row="2" Text="발행 수량 : " FontSize="20" 
                                   VerticalAlignment="Center" HorizontalAlignment="Right"/>

                    </Grid>


                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="5*"/>
                        </Grid.RowDefinitions>

                        <Viewbox Grid.Row="0">
                            <TextBox x:Name="tb_Model" Text="{Binding ModelText}" FontSize="20" MinWidth="250"
                                   VerticalAlignment="Center" HorizontalAlignment="Left" MaxLines="1"/>
                        </Viewbox>

                        <Viewbox Grid.Row="1">
                            <TextBox x:Name="tb_PackCount" Text="{Binding PackCount}" FontSize="20" MinWidth="250"
                                   VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </Viewbox>

                        <Viewbox Grid.Row="2">
                            <TextBox x:Name="tb_PrintCount" Text="{Binding PrintCount}" FontSize="20" MinWidth="250"
                                   VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </Viewbox>
                        
                        

                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            
                            <Button  x:Name="btn_PortConnect" Grid.Column="0" Width="100" 
                                 HorizontalAlignment="Center" Content="포트연결"
                                FontSize="22" Command="{Binding BtnPortConnectCommand}" />

                            <Button  x:Name="btn_Print" Grid.Column="1" Width="100" 
                                 HorizontalAlignment="Center" Content="출력"
                                FontSize="22" Command="{Binding BtnPrintCommand}"/>
                        </Grid>
                        
                    </Grid>
                </Grid>
            </Grid>
        </Border>        
    </Border>
</Window>
